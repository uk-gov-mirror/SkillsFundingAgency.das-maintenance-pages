{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "resourceEnvironmentName": {
            "type": "string"
        },
        "serviceName": {
            "type": "string"
        },
        "tags": {
            "type": "object"
        },
        "resourceGroupLocation": {
            "type": "string"
        },
        "sharedEnvResourceGroup": {
            "type": "string"
        },
        "azureFrontDoorName": {
            "type": "string"
        },
        "azureFrontDoorCustomHostName": {
            "type": "string"
        },
        "storageAccountType": {
            "type": "string"
        },
        "utcValue": {
            "type": "string",
            "defaultValue": "[utcNow()]"
        }
    },
    "variables": {
        "deploymentUrlBase": "https://raw.githubusercontent.com/SkillsFundingAgency/das-platform-building-blocks/DASD-12494/templates/",
        "resourceNamePrefix": "[toLower(concat('das-', parameters('resourceEnvironmentName'),'-', parameters('serviceName')))]",
        "resourceGroupName": "[concat(variables('resourceNamePrefix'), '-rg')]",
        "storageAccountName": "[concat('das', parameters('resourceEnvironmentName'), parameters('serviceName'), 'str')]",
        "azureFrontDoorEndpointName": "[concat(variables('resourceNamePrefix'), '-fde')]",
        "originGroupName": "[concat(variables('azureFrontDoorEndpointName'), '-og')]",
        "endpointRouteName": "[concat(variables('azureFrontDoorEndpointName'), '-rt')]"
    },
    "resources": [
        {
            "apiVersion": "2021-04-01",
            "name": "[variables('resourceGroupName')]",
            "type": "Microsoft.Resources/resourceGroups",
            "location": "[parameters('resourceGroupLocation')]",
            "tags": "[parameters('tags')]",
            "properties": {}
        },
        {
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('storageAccountName'), '-', parameters('utcValue'))]",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[variables('resourceGroupName')]",
            "dependsOn": [
                "[variables('resourceGroupName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'storage-account-arm.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "storageAccountName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "storageKind": {
                        "value": "StorageV2"
                    },
                    "accountType": {
                        "value": "[parameters('storageAccountType')]"
                    },
                    "allowSharedKeyAccess": {
                        "value": true
                    }
                }
            }
        },
        // ,
        // {
        //     "apiVersion": "2021-04-01",
        //     "name": "[concat(variables('cdnEndpointName'), '-', parameters('utcValue'))]",
        //     "type": "Microsoft.Resources/deployments",
        //     "resourceGroup": "[parameters('sharedEnvResourceGroup')]",
        //     "dependsOn": [
        //         "[variables('resourceGroupName')]"
        //     ],
        //     "properties": {
        //         "mode": "Incremental",
        //         "templateLink": {
        //             "uri": "[concat(variables('deploymentUrlBase'),'cdn-endpoint.json')]",
        //             "contentVersion": "1.0.0.0"
        //         },
        //         "parameters": {
        //             "cdnProfileName": {
        //                 "value": "[parameters('sharedCdnProfileName')]"
        //             },
        //             "cdnEndPointName": {
        //                 "value": "[variables('cdnEndpointName')]"
        //             },
        //             "originHostName": {
        //                 "value": "[replace(replace(replace(reference(concat(variables('storageAccountName'), '-', parameters('utcValue'))).outputs.storagePrimaryEndpointsWeb.value, 'https://', ''),'-', '.'), '/', '')]"
        //             },
        //             "customDomainName": {
        //                 "value": "[parameters('cdnCustomHostName')]"
        //             },
        //             "isHttpAllowed": {
        //                 "value": false
        //             }
        //         }
        //     }
        // }
        {
            "apiVersion": "2021-04-01",
            "name": "[concat(variables('azureFrontDoorEndpointName'), '-', parameters('utcValue'))]",
            "type": "Microsoft.Resources/deployments",
            "resourceGroup": "[parameters('sharedEnvResourceGroup')]",
            "dependsOn": [
                "[variables('resourceGroupName')]"
            ],
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[concat(variables('deploymentUrlBase'),'front-door-endpoint.json')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "azureFrontDoorName": {
                        "value": "[parameters('azureFrontDoorName')]"
                    },
                    "azureFrontDoorEndpointName": {
                        "value": "[variables('azureFrontDoorEndpointName')]"
                    },
                    "azureFrontDoorEndpointOriginName": {
                        "value": "[variables('storageAccountName')]"
                    },
                    "endpointRouteName":{
                        "value": "[variables('endpointRouteName')]"
                    },
                    "originGroupName": {
                        "value": "[variables('originGroupName')]"
                    },
                    "originHostName": {
                        "value": "[replace(replace(replace(reference(concat(variables('storageAccountName'), '-', parameters('utcValue'))).outputs.storagePrimaryEndpointsWeb.value, 'https://', ''),'-', '.'), '/', '')]"
                    },
                    "customDomainName": {
                        "value": "[parameters('azureFrontDoorCustomHostName')]"
                    }
                }
            }
        }
    ],
    "outputs": {
        "StorageAccountName": {
            "type": "string",
            "value": "[variables('storageAccountName')]"
        },
        "azureFrontDoorEndpointName": {
            "type": "string",
            "value": "[variables('azureFrontDoorEndpointName')]"
        }
    }
}